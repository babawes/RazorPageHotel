@page
@model RazorPageHotel.Pages.Rooms.UpdateRoomModel
@{
}


<h2>Update Room</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.newRoom.Pris"></label>
        <input asp-for="@Model.newRoom.Pris" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.newRoom.Types"></label>
        <select asp-for="@Model.newRoom.Types">
            <option value="D">D</option>
            <option value="S">S</option>
            <option value="F">F</option>
        </select>
    </div>
    <div>
        <input type="hidden" name="updateHId" value="@Model.hotelNumber" />
    </div>
    <div>
        <input type="hidden" name="updateRId" value="@Model.roomNumber" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>